{
  "extends": [
    "plugin:prettier/recommended",
    "@rocketseat/eslint-config/next",
    "next/core-web-vitals"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "none",
        "printWidth": 120
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.tsx",
        "**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": "off",
        "new-cap": "off"
      }
    }
  ]
}